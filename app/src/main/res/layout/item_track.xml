<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_mainGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/track_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/placeholder"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/track_text_main"
        tools:text="nameTESTnameTESTnameTESTname"
        android:ellipsize="end"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/track_image"
        app:layout_constraintBottom_toTopOf="@id/track_artist"
        app:layout_constraintStart_toEndOf="@id/track_image"
        app:layout_constraintEnd_toStartOf="@id/track_arrow"/>

    <TextView
        android:id="@+id/track_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/track_text_second"
        tools:text="nameTESTnameTESTnameTESTnanameTESTnameTESTnameTESTnanameTESTnameTESTnameTESTna"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        app:layout_constraintStart_toStartOf="@id/track_name"
        app:layout_constraintBottom_toBottomOf="@id/track_image"
        app:layout_constraintEnd_toStartOf="@id/track_dot"/>

    <ImageView
        android:id="@+id/track_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dot"
        app:layout_constraintTop_toTopOf="@id/track_artist"
        app:layout_constraintBottom_toBottomOf="@id/track_artist"
        app:layout_constraintStart_toEndOf="@id/track_artist"
        app:layout_constraintEnd_toStartOf="@id/track_time"/>

    <TextView
        android:id="@+id/track_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/track_text_second"
        tools:text="TIMETIME"
        app:layout_constraintTop_toTopOf="@id/track_artist"
        app:layout_constraintBottom_toBottomOf="@id/track_artist"
        app:layout_constraintStart_toEndOf="@id/track_dot"
        app:layout_constraintEnd_toEndOf="@id/track_name"
        app:layout_constraintBaseline_toBaselineOf="@id/track_artist"/>

    <ImageView
        android:id="@+id/track_arrow"
        style="@style/secondary_button_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/arrowforward"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>