<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_background">
        <item name="android:background">@color/white_blue</item>
    </style>
    <style name="secondary_background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:layout_marginTop">@dimen/half_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="settings_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/secondary_text_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="settings_switch" parent="settings_button_text">
        <item name="trackTint">@color/light_gray</item>
        <item name="thumbTint">@color/gray</item>
    </style>
    <style name="secondary_button_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="back_button_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="search_icon">
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="editText">
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/trans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>
    <style name="sec_menu_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:padding">@dimen/primary_text_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="track_text_second">
        <item name="fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textSize">@dimen/track_text_second</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="track_text_main">
        <item name="fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textSize">@dimen/track_text_main</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="err_img_found">
        <item name="android:src">@drawable/not_found_light</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="search_err_img_connect">
        <item name="android:src">@drawable/no_connection_light</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="notification_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_err_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/search_err_text_margin</item>
    </style>
    <style name="search_buttons">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/search_err_refresh_corner</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_err_refresh_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="player_track_info_title">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingVertical">8dp</item>
    </style>
    <style name="player_track_info_value">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="player_track_name">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="player_track_artist">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="player_btn_add_to_list">
        <item name="tint">@color/black</item>
    </style>
    <style name="player_btn_play">
        <item name="tint">@color/black</item>
        <item name="android:src">@drawable/button_play</item>
    </style>
    <style name="player_btn_like">
        <item name="tint">@color/black</item>
    </style>

    <style name="library_tabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/library_tabLayout_text</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="library_tabLayout_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="navigation_bar">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/bottom_nav_color</item>
        <item name="itemTextColor">@drawable/bottom_nav_color</item>
    </style>

    <style name="add_playlist_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>