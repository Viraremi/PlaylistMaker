<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_background">
        <item name="android:background">@color/white_blue</item>
    </style>
    <style name="secondary_background">
        <item name="android:background">@color/white</item>
    </style>
    <style name="main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:layout_marginTop">@dimen/half_padding</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="settings_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/secondary_text_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="secondary_button_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="back_button_icon">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:tint">@color/black</item>
    </style>
    <style name="search_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/half_padding</item>
        <item name="android:tint">@color/gray</item>
    </style>
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/trans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/gray</item>
    </style>
    <style name="sec_menu_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:padding">@dimen/primary_text_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <style name="track_text_second">
        <item name="fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textSize">@dimen/track_text_second</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="track_text_main">
        <item name="fontFamily">"@font/ys_display_regular"</item>
        <item name="android:textSize">@dimen/track_text_main</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <style name="search_err_img_found">
        <item name="android:src">@drawable/not_found_light</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="search_err_img_connect">
        <item name="android:src">@drawable/no_connection_light</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="search_notification_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_err_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">@dimen/search_err_text_margin</item>
    </style>
    <style name="search_buttons">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/search_err_refresh_corner</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_err_refresh_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>